<Window x:Class="A2IshratVohra.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A2IshratVohra"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBox Name="txtDisplay" Grid.Row="0" Height="50" FontSize="24" HorizontalAlignment="Stretch" VerticalAlignment="Center" TextAlignment="Left" Margin="10" Background="Black" Foreground="White"/>
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="Del" Grid.Row="0" Grid.Column="0" Click="Button_Click" Background="LightGray" FontSize="16" BorderBrush="DarkGray" BorderThickness="4" Margin="5"/>
            <Button Content="R" Grid.Row="0" Grid.Column="1" Click="Button_Click" Background="LightGray" FontSize="16" BorderBrush="DarkGray" BorderThickness="4" Margin="5"/>
            <Button Content="Off" Grid.Row="0" Grid.Column="2" Click="Button_Click" Grid.ColumnSpan="2" Background="LightGray" FontSize="16" BorderBrush="DarkGray" BorderThickness="4" Margin="5"/>

            <Button Content="7" Grid.Row="1" Grid.Column="0" Click="Button_Click" Background="Black" Foreground="White" FontSize="16" Margin="5"/>
            <Button Content="8" Grid.Row="1" Grid.Column="1" Click="Button_Click" Background="Black" Foreground="White" FontSize="16" Margin="5"/>
            <Button Content="9" Grid.Row="1" Grid.Column="2" Click="Button_Click" Background="Black" Foreground="White" FontSize="16" Margin="5"/>
            <Button Content="/" Grid.Row="1" Grid.Column="3" Click="Button_Click" Background="LightGray" FontSize="16" BorderBrush="DarkGray" BorderThickness="4" Margin="5"/>

            <Button Content="4" Grid.Row="2" Grid.Column="0" Click="Button_Click" Background="Black" Foreground="White" FontSize="16" Margin="5"/>
            <Button Content="5" Grid.Row="2" Grid.Column="1" Click="Button_Click" Background="Black" Foreground="White" FontSize="16" Margin="5"/>
            <Button Content="6" Grid.Row="2" Grid.Column="2" Click="Button_Click" Background="Black" Foreground="White" FontSize="16" Margin="5"/>
            <Button Content="*" Grid.Row="2" Grid.Column="3" Click="Button_Click" Background="LightGray" FontSize="16" BorderBrush="DarkGray" BorderThickness="4" Margin="5"/>

            <Button Content="1" Grid.Row="3" Grid.Column="0" Click="Button_Click" Background="Black" Foreground="White" FontSize="16" Margin="5"/>
            <Button Content="2" Grid.Row="3" Grid.Column="1" Click="Button_Click" Background="Black" Foreground="White" FontSize="16" Margin="5"/>
            <Button Content="3" Grid.Row="3" Grid.Column="2" Click="Button_Click" Background="Black" Foreground="White" FontSize="16" Margin="5"/>
            <Button Content="-" Grid.Row="3" Grid.Column="3" Click="Button_Click" Background="LightGray" FontSize="16" BorderBrush="DarkGray" BorderThickness="4" Margin="5"/>

            <Button Content="0" Grid.Row="4" Grid.Column="0" Click="Button_Click" Background="LightGray" FontSize="16" BorderBrush="DarkGray" BorderThickness="4" Margin="5"/>
            <Button Content="=" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Click="Button_Click" Background="LightGray" FontSize="16" BorderBrush="DarkGray" BorderThickness="4" Margin="5"/>
            <Button Content="+" Grid.Row="4" Grid.Column="3" Click="Button_Click" Background="LightGray" FontSize="16" BorderBrush="DarkGray" BorderThickness="4" Margin="5"/>
        </Grid>
    </Grid>
</Window>
